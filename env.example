# AI Stocks Companion Jobs - Environment Variables
# Copy this file to .env and fill in your values

# Email Configuration (SendGrid) - Optional
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_email@domain.com
ALERT_EMAIL_ADDRESS=your_alert_email@domain.com

# WhatsApp Configuration (Twilio) - Recommended
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
ALERT_PHONE_NUMBER=whatsapp:+1234567890

# Reddit API Configuration (Optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=AI-Stocks-Companion-Jobs/1.0.0

# Job Configuration
NODE_ENV=development
LOG_LEVEL=info

# Optional: Customize monitoring intervals (in minutes)
# NEWS_CHECK_INTERVAL=30
# REDDIT_CHECK_INTERVAL=30
