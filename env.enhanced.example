# AI Stocks Companion Enhanced Jobs - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=production

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# AI ANALYSIS CONFIGURATION
# =============================================================================

# OpenAI API Key for AI-powered news analysis
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# EMAIL NOTIFICATIONS (SendGrid)
# =============================================================================

# SendGrid API Key for email notifications
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# SendGrid verified sender email
SENDGRID_FROM_EMAIL=your_email@domain.com

# Email address to receive alerts
ALERT_EMAIL_ADDRESS=your_alert_email@domain.com

# =============================================================================
# WHATSAPP NOTIFICATIONS (Twilio)
# =============================================================================

# Twilio Account SID
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# WhatsApp number to receive alerts (format: whatsapp:+1234567890)
ALERT_PHONE_NUMBER=whatsapp:+1234567890

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================

# Telegram Bot Token
# Create a bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Chat ID to receive alerts
# Get your chat ID by messaging @userinfobot
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# DISCORD NOTIFICATIONS
# =============================================================================

# Discord Webhook URL
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# =============================================================================
# SLACK NOTIFICATIONS
# =============================================================================

# Slack Webhook URL
# Create a webhook in your Slack workspace
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook_url_here

# =============================================================================
# PUSH NOTIFICATIONS
# =============================================================================

# Push Notification Key (for mobile apps)
# Configure with your push notification service
PUSH_NOTIFICATION_KEY=your_push_notification_key_here

# =============================================================================
# REDDIT API CONFIGURATION
# =============================================================================

# Reddit API credentials
# Create an app at: https://reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here

# Reddit User Agent (format: platform:appid:version (by /u/username))
REDDIT_USER_AGENT=web:ai-stocks-companion:v1.0.0 (by /u/your_username)

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Job execution interval (in minutes)
# Default: 15 minutes for enhanced system
JOB_INTERVAL_MINUTES=15

# Health check port (for Railway/Render deployment)
PORT=3000

# =============================================================================
# ALERT THROTTLING CONFIGURATION
# =============================================================================

# Email throttle (minutes between emails)
EMAIL_THROTTLE_MINUTES=30

# WhatsApp throttle (minutes between WhatsApp messages)
WHATSAPP_THROTTLE_MINUTES=30

# Telegram throttle (minutes between Telegram messages)
TELEGRAM_THROTTLE_MINUTES=15

# Discord throttle (minutes between Discord messages)
DISCORD_THROTTLE_MINUTES=10

# Slack throttle (minutes between Slack messages)
SLACK_THROTTLE_MINUTES=10

# Push notification throttle (minutes between push notifications)
PUSH_THROTTLE_MINUTES=5

# =============================================================================
# NEWS FILTERING CONFIGURATION
# =============================================================================

# Minimum impact score for alerts (1-10)
MIN_IMPACT_SCORE=5

# Maximum news items per alert batch
MAX_ALERT_ITEMS=10

# News cache size (number of recent items to track)
NEWS_CACHE_SIZE=1000

# =============================================================================
# AI ANALYSIS CONFIGURATION
# =============================================================================

# OpenAI model to use (gpt-3.5-turbo, gpt-4, etc.)
OPENAI_MODEL=gpt-3.5-turbo

# OpenAI temperature (0.0-1.0, lower = more focused)
OPENAI_TEMPERATURE=0.2

# OpenAI max tokens per request
OPENAI_MAX_TOKENS=1000

# AI analysis timeout (milliseconds)
AI_ANALYSIS_TIMEOUT=30000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Enable detailed logging
ENABLE_DETAILED_LOGGING=true

# Log file retention (days)
LOG_RETENTION_DAYS=30

# Enable performance metrics
ENABLE_PERFORMANCE_METRICS=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Maximum requests per minute
MAX_REQUESTS_PER_MINUTE=100

# Enable CORS
ENABLE_CORS=true

# Allowed origins (comma-separated)
ALLOWED_ORIGINS=*

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Railway/Render deployment
DEPLOYMENT_PLATFORM=railway

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# Graceful shutdown timeout (seconds)
SHUTDOWN_TIMEOUT=30

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI analysis
ENABLE_AI_ANALYSIS=true

# Enable multi-channel alerts
ENABLE_MULTI_CHANNEL_ALERTS=true

# Enable Reddit monitoring
ENABLE_REDDIT_MONITORING=true

# Enable enhanced news sources
ENABLE_ENHANCED_NEWS_SOURCES=true

# Enable daily reports
ENABLE_DAILY_REPORTS=true

# Enable real-time monitoring
ENABLE_REAL_TIME_MONITORING=false

# =============================================================================
# NOTIFICATION PREFERENCES
# =============================================================================

# Send alerts for high impact news (7+)
SEND_HIGH_IMPACT_ALERTS=true

# Send alerts for critical impact news (8+)
SEND_CRITICAL_IMPACT_ALERTS=true

# Send alerts for earnings news
SEND_EARNINGS_ALERTS=true

# Send alerts for Fed news
SEND_FED_ALERTS=true

# Send alerts for IPO news
SEND_IPO_ALERTS=true

# Send alerts for M&A news
SEND_MERGER_ALERTS=true

# Send alerts for crypto news
SEND_CRYPTO_ALERTS=true

# Send alerts for energy news
SEND_ENERGY_ALERTS=true

# Send alerts for technology news
SEND_TECH_ALERTS=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================

# Custom alert message prefix
ALERT_MESSAGE_PREFIX=üö® AI Stocks Alert

# Custom alert message suffix
ALERT_MESSAGE_SUFFIX=‚ö†Ô∏è This is for informational purposes only and not financial advice.

# Timezone for scheduling (e.g., America/New_York)
TIMEZONE=UTC

# Date format for logs and alerts
DATE_FORMAT=YYYY-MM-DD HH:mm:ss

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Enable automatic backups
ENABLE_AUTO_BACKUP=false

# Backup interval (hours)
BACKUP_INTERVAL_HOURS=24

# Backup retention (days)
BACKUP_RETENTION_DAYS=7

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum concurrent AI analyses
MAX_CONCURRENT_AI_ANALYSES=5

# News fetch timeout (milliseconds)
NEWS_FETCH_TIMEOUT=30000

# Reddit fetch timeout (milliseconds)
REDDIT_FETCH_TIMEOUT=30000

# Alert send timeout (milliseconds)
ALERT_SEND_TIMEOUT=10000

# =============================================================================
# DEBUGGING
# =============================================================================

# Enable debug mode
DEBUG_MODE=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Enable performance profiling
ENABLE_PROFILING=false

# Test mode (no actual alerts sent)
TEST_MODE=false
